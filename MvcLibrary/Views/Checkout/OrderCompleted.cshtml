@{
    ViewData["Title"] = "Order Completed";
}

<div class="container vh-100 mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-12 col-md-6">
            <span class="display-1 text-success">
                <i class="far fa-check-circle"></i>
            </span>
            <h1 class="mt-3">Thank you for your purchase</h1>
            <p>You should receive an order confirmation email shortly</p>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-6">
            <div class="d-grid gap-2">
                <a asp-controller="Library" asp-action="Index" class="btn btn-outline-dark">Continue Shopping <i class="fas fa-shopping-bag"></i></a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark mt-2">Home <i class="fas fa-home"></i></a>
            </div>
        </div>
    </div>
</div>