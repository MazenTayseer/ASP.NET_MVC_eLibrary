@model GameQuestion

@{
    ViewData["Title"] = "ViewBook";
}

<div class="container min-vh-100 text-center mt-5">
    <h1 class="mb-4">View Question</h1>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2 text-right">
                    <strong>Question:</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Question)
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-2 text-right">
                    <strong>Answer:</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Answer)
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 mb-4">
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</div>